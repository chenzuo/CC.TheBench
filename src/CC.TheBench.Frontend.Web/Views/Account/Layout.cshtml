<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@RenderSection("Title") &raquo; @Text.General.ApplicationName</title>

    <meta name="description" content="@RenderSection("Title") &raquo; @Text.General.ApplicationName" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="@Url.Content("~/css/bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/font-awesome.css")" rel="stylesheet" />

    <!--[if IE 7]>
        <link href="@Url.Content("~/css/font-awesome-ie7.css")" rel="stylesheet" />
    <![endif]-->

    <link href="@Url.Content("~/css/ace-fonts.css")" rel="stylesheet" />

    <link href="@Url.Content("~/css/ace.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/ace-rtl.css")" rel="stylesheet" />

    <!--[if lte IE 8]>
        <link href="@Url.Content("~/css/ace-ie.css")" rel="stylesheet" />
    <![endif]-->

    <link href="@Url.Content("~/css/bench.css")" rel="stylesheet" />

    <!--[if lt IE 9]>
        <script src="@Url.Content("~/js/html5shiv.js")"></script>
        <script src="@Url.Content("~/js/respond.js")"></script>
    <![endif]-->
</head>
<body class="login-layout">
    <div class="main-container">
        <div class="main-content">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="login-container">
                        <div class="center">
                            <h1>
                                <span class="white">@Text.General.ApplicationNamePart1</span>
                                <span class="red">@Text.General.ApplicationNamePart2</span>
                            </h1>
                            <h4 class="blue">&copy; @Text.General.CompanyName</h4>
                        </div>

                        <div class="space-6"></div>

                        <div class="position-relative">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--[if !IE]> -->
    <script type="text/javascript">
        window.jQuery || document.write("<script src='@Url.Content("~/js/jquery-2.0.3.js")'>" + "<" + "/script>");
    </script>
    <!-- <![endif]-->

    <!--[if IE]>
    <script type="text/javascript">
        window.jQuery || document.write("<script src='@Url.Content("~/js/jquery-1.10.2.js")'>" + "<" + "/script>");
    </script>
    <![endif]-->

    <script type="text/javascript">
        if ("ontouchend" in document) document.write("<script src='@Url.Content("~/js/jquery.mobile.custom.js")'>" + "<" + "/script>");
    </script>
    
    <script src="@Url.Content("~/js/jquery.validate.js")"></script>

    @RenderSection("Scripts", false)
</body>
</html>